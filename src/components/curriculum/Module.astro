---
const { course } = Astro.props
---

<a
  href={`/programma/${course.slug}`}
  class={`bg-neutral-50 hover:bg-neutral-900 hover:text-white rounded-2xl px-4 py-2 font-semibold row-span-${
    course.data.studycredits / 3
  } col-start-${course.data.semester} ${
    course.data.tracks &&
    course.data.tracks.map((track: string) => ` js-track-${track}`).join(``)
  } js-course`}
>
  <h3 class="">{course.data.title}</h3>
  <!-- <p>
    Semester {course.data.semester} - Weight {course.data.weight}
  </p> -->
  <!-- {
    course.data.tools && course.data.tools.length > 0 && (
      <p class="c-course__tools">{course.data.tools.join(`, `)}</p>
    )
  } -->
</a>
